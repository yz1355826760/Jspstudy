<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--RequestServlet-->
    <servlet>
        <servlet-name>req</servlet-name>
        <servlet-class>com.servlettest.RequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>req</servlet-name>
        <url-pattern>/RequestServlet</url-pattern>
    </servlet-mapping>

    <!--ResponseServlet-->
    <servlet>
        <servlet-name>res</servlet-name>
        <servlet-class>com.servlettest.ResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>res</servlet-name>
        <url-pattern>/ResponseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ss</servlet-name>
        <servlet-class>com.servlettest.SessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ss</servlet-name>
        <url-pattern>/ss</url-pattern>
    </servlet-mapping>


<servlet>
    <servlet-name>sc</servlet-name>
    <servlet-class>com.servlettest.servletcontext</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>sc</servlet-name>
        <url-pattern>/sc</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>